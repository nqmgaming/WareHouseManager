            android:name=".ui.activities.auth.signup.SignupDetailInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.auth.signup.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.auth.signin.SigningActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.activities.auth.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.onboarding.OnboardingActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>