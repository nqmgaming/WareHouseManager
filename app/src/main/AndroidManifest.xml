        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WareHouseManager"
        tools:targetApi="31" >
        <activity
            android:name=".ui.activities.product.AddProductActivity"
            android:exported="false"
                android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".ui.activities.avatar.SetAvatarActivity"
            android:exported="false" >
        </activity>
        <activity
            android:name=".ui.activities.auth.forgot.SetPasswordActivity"
            android:exported="false" />
